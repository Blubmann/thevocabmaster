<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".fabianfleischer.thevocabmaster.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fabianfleischer.thevocabmaster.RegisterActivity"
            android:icon="@drawable/ic_launcher"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".fabianfleischer.thevocabmaster.DashboardActivity"
            android:icon="@drawable/ic_launcher"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".fabianfleischer.thevocabmaster.MenuActivity"
            android:icon="@drawable/ic_launcher"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".fabianfleischer.thevocabmaster.ListeActivity"
            android:icon="@drawable/ic_launcher"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".fabianfleischer.thevocabmaster.HilfeActivity"
            android:icon="@drawable/ic_launcher"
            android:parentActivityName=".fabianfleischer.thevocabmaster.DashboardActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fabianfleischer.thevocabmaster.DashboardActivity" />
        </activity>
        <activity
            android:name=".fabianfleischer.thevocabmaster.HighscoreActivity"
            android:label="@string/title_activity_highscore" >
        </activity>
    </application>

</manifest>
