<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/WörterÜben"
        android:textSize="25dip"
        android:gravity="center"
        android:padding="10dip"
        android:textColor="#333333"
        android:background="@drawable/backgroundueberschrift"/>

    <TextView
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:text="@string/EingabeWort"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:singleLine="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wort"
        android:id="@+id/gesucht"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eingabeKasten" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Statistik"
        android:id="@+id/buttonStatistik"
        android:layout_gravity="right"
        android:layout_marginBottom="-50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Überprüfen"
        android:id="@+id/buttonPruefen"
        android:layout_marginBottom="-50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Weiter"
        android:id="@+id/buttonWeiter"
        android:layout_marginBottom="-50dp" />

    <TextView
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:id="@+id/ausgabe"
        android:textColor="#ffff0000"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="140dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SpracheÄndern"
        android:id="@+id/buttonSprachWechsel"
        android:singleLine="false"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ausgabeStatistik"
        android:layout_marginBottom="-20dp" />

</LinearLayout>